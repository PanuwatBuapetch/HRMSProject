        </div>
    </nav>

    <div class="sidebar-footer">
        <small class="text-muted">© 2024 PSU HRMS</small>
    </div>
</div>

<style>
    .sidebar {
        width: 250px;
        height: 100vh;
        background: #ffffff;
        border-right: 1px solid #e0e0e0;
        display: flex;
        flex-direction: column;
        position: fixed;
        left: 0;
        top: 0;
        overflow-y: auto;
        box-shadow: 2px 0 10px rgba(0,0,0,0.05);
    }

    .sidebar-header {
        padding: 20px;
        border-bottom: 1px solid #e0e0e0;
    }

    .logo-container {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .logo-box {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 8px rgba(33, 150, 243, 0.3);
    }

    .logo-text {
        color: white;
        font-size: 24px;
        font-weight: bold;
    }

    .logo-title {
        font-size: 20px;
        font-weight: bold;
        color: #1976D2;
    }

    .sidebar-nav {
        flex: 1;
        padding: 10px 0;
    }

    .nav-section {
        margin-bottom: 20px;
    }

    .nav-section-title {
        padding: 8px 20px;
        font-size: 12px;
        font-weight: 600;
        color: #2196F3;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-top: 10px;
    }

    .nav-item {
        display: flex;
        align-items: center;
        padding: 12px 20px;
        color: #333;
        text-decoration: none;
        transition: all 0.3s ease;
        border-left: 3px solid transparent;
        gap: 12px;
    }

        .nav-item i {
            font-size: 20px;
            width: 28px;
            color: #666;
            transition: all 0.3s ease;
        }

    /* Icon Colors */
    .icon-purple {
        color: #9C27B0 !important;
    }

    .icon-orange {
        color: #FF9800 !important;
    }

    .icon-blue {
        color: #2196F3 !important;
    }

    .icon-gray {
        color: #757575 !important;
    }

    .nav-item:hover .icon-purple {
        color: #7B1FA2 !important;
    }

    .nav-item:hover .icon-orange {
        color: #F57C00 !important;
    }

    .nav-item:hover .icon-blue {
        color: #1976D2 !important;
    }

    .nav-item:hover .icon-gray {
        color: #616161 !important;
    }

    .nav-item span {
        font-size: 14px;
    }

    .nav-item:hover {
        background: #f5f5f5;
        color: #2196F3;
        border-left-color: #2196F3;
    }

        .nav-item:hover i {
            color: #2196F3;
        }

    .nav-item.active {
        background: linear-gradient(90deg, rgba(33, 150, 243, 0.1) 0%, rgba(33, 150, 243, 0.05) 100%);
        color: #2196F3;
        border-left-color: #2196F3;
        font-weight: 500;
    }

        .nav-item.active i {
            color: #2196F3;
        }

    .nav-subsection {
        padding-left: 20px;
    }

    .nav-subitem {
        display: block;
        padding: 8px 20px;
        color: #666;
        text-decoration: none;
        font-size: 13px;
        transition: all 0.2s ease;
        border-left: 2px solid transparent;
    }

        .nav-subitem:hover {
            color: #2196F3;
            background: #f9f9f9;
            border-left-color: #2196F3;
            padding-left: 25px;
        }

    .sidebar-footer {
        padding: 20px;
        text-align: center;
        border-top: 1px solid #e0e0e0;
    }

    /* Footer in navigation */
    .nav-footer-section {
        margin-top: auto;
        padding: 20px;
        background: #f8f9fa;
        border-top: 1px solid #e0e0e0;
    }

    .nav-footer-title {
        font-size: 13px;
        font-weight: 600;
        color: #2196F3;
        margin-bottom: 10px;
        text-align: center;
    }

    .nav-footer-text {
        font-size: 11px;
        color: #666;
        line-height: 1.6;
        text-align: center;
    }

    /* Scrollbar styling */
    .sidebar::-webkit-scrollbar {
        width: 6px;
    }

    .sidebar::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    .sidebar::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 3px;
    }

        .sidebar::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }
</style>

@code {
    private bool collapseNavMenu = false;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
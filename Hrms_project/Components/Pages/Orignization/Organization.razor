@page "/organization"

<style>
    /* Styling for the overall page and structure */
    .organization-container {
        padding: 20px;
        background-color: #f8f9fa; /* Light gray background for the content area */
        font-family: Arial, sans-serif;
    }

    .org-chart-title {
        color: #007bff; /* Blue color for title */
        font-size: 1.5rem;
        margin-bottom: 20px;
        border-bottom: 3px solid #007bff;
        padding-bottom: 10px;
    }

    /* Basic box styling for organization units */
    .org-unit-box {
        border: 1px solid #ccc;
        padding: 10px;
        margin: 5px;
        text-align: center;
        background-color: white;
        min-width: 150px;
        height: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        cursor: pointer;
        transition: background-color 0.2s;
        border-radius: 5px;
    }

        .org-unit-box:hover {
            background-color: #e9ecef;
        }

    /* Styling for the main organizational chart layout (uses Flexbox for simplicity) */
    .org-chart-main {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Styling for the main levels */
    .org-level {
        display: flex;
        justify-content: center;
        width: 100%;
        margin-top: 30px;
        position: relative; /* For drawing connecting lines/pseudo-elements later */
    }

    .org-level-row {
        display: flex;
        justify-content: center;
        width: 100%;
    }

    .org-column {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 0 10px;
    }

    /* Utility for simple 'connector' line appearance */
    .connector-line {
        height: 30px;
        width: 1px;
        background-color: #000;
        margin: 0 auto;
    }

    /* Specific styling for the top box (อธิการบดี) */
    .org-top-box {
        font-weight: bold;
        background-color: #d1ecf1; /* Light blue/teal background */
    }

    /* Styling for the 'สำนักงานอธิการบดี' section (the dense middle part) */
    .office-of-president {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 20px 0;
    }

    .office-section-row {
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .office-column-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 10px;
    }

    .office-sub-unit {
        margin-top: 10px;
    }

    .office-label {
        margin-top: 5px;
        font-size: 0.8rem;
        color: #6c757d;
    }

    /* Style for the 'หมายเหตุ' box */
    .note-box {
        border: 1px solid #ffc107;
        padding: 5px 10px;
        background-color: #fff3cd;
        color: #856404;
        font-size: 0.8rem;
        margin-top: 10px;
        border-radius: 3px;
    }

</style>

